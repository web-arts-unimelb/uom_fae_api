/**
 * Helper that returns an array of default settings.
 */
function uom_fae_blocks_defaults($delta = 0) {
  return array(
    'description' => t('Find an Expert Block: unconfigured @delta', array('@delta' => $delta)),
    'callback' => '',
    'resource' => '',
    'arguments' => array(),
  );
}

