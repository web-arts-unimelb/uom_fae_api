  }
  return theme('table', array('rows' => $rows));
}

/**
 * Turn a publication type URI into a label.
 */
function _uom_fae_blocks_publication_type($uri) {
  $output = '';

  // Early return.
  if (empty($uri)) {
    return $output;
  }

  $types = array(
    'A1' => t('Authored-Research'),
    'A2' => t('Edited'),
    'A3' => t('Revision/New Edition'),
    'A4' => t('Translated Book'),
    'A5' => t('Text Book'),
    'A6' => t('Authored Book (Other)'),
    'B1' => t('Chapter in Research Book'),
    'B2' => t('Chapters in Books (Other)'),
    'C1' => t('Article in scholarly refereed journal'),
    'C2' => t('Article in unrefereed journal (including articles in professional journals)'),
    'C3' => t('Letter or Note'),
    'C5' => t('Other contribution to a refereed journal'),
    'D4' => t('Major Reference work'),
    'E1' => t('Editorship (incl. Chief, Assoc. and other Editorial Roles)'),
    'E2' => t('Editorial Board Member'),
    'E3' => t('Guest Editor'),
    'F1' => t('Fully written refereed paper'),
    'F2' => t('Fully written unrefereed paper'),
    'G4' => t('Major Reports and Working Papers'),
    'G5' => t('Minor Reports and Working Papers'),
  );

  // The final two characters of the publication type uri match our array.
  $type = substr($uri, -1, 2);
  if (!empty($types[$type])) {
    $output = $types[$type];
  }
  return $output;
}
